    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Current File",
        "args": ["${relativeFile}"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Test",
        "args": ["${workspaceFolder}/test/main.ts"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"]
      }
    ]
}
